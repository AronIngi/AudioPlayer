<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="hi.verkefni.vidmot.ListiController"
      prefHeight="400.0" prefWidth="600.0" spacing="20">
    <padding>
        <Insets right="20.0" left="20.0" top="20.0" bottom="20.0"/>
    </padding>
    <children>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="fxHomeButton" text="Home" onAction="#onHome"/>
            <Button fx:id="fxNewSong" text="New Song" onAction="#onNewButton" />
        </HBox>
        <ListView fx:id="fxListView" prefHeight="200.0" prefWidth="200.0" />
        <Button fx:id="fxPlayButton" text="Play"/>
        <Slider fx:id="fxSlider"/>
    </children>
</VBox>

